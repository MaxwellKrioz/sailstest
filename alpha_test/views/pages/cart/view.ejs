<div class="row">
	<div class="col-12 table-responsive-md">
		<h2>My Cart</h2>
		<% if(cart){
			if(cart.products || cart.product.length > 0){%> 	
		<table class="table table-striped">
			<thead class="thead-dark">
				<tr>
					<th scope="col col-2">Product</th>
					<th scope="col"></th>
					<th scope="col"></th>
					<th scope="col"></th>
					<th scope="col">price</th>
					<th scope="col"></th>
				</tr>
			</thead>
			<tbody>
				<%						
				cart.products.forEach(function(product){%>
					<tr>
						<td class="align-middle"><a class="product-link" href="/products/<%=product.id%>"><img class="img-fluid" src="/images<%=product.image%>" style="max-width:100px;"></a></td>
						<td class="align-middle"><%=product.name%> - <%=product.size%></td>
						<td class="align-middle">$<%=product.price%></td>
						<td class="align-middle">x <%=product.quantity%></td>
						<td class="align-middle"><b>$<%=product.price*product.quantity%></b></td>
						<td class="align-middle">
							<a class="btn btn-sm btn-outline-secondary" href="/cart/update/plus/?id=<%=product.id%>&size=<%=product.size%>">+</a>
							<a class="btn btn-sm btn-outline-secondary" href="/cart/update/minus/?id=<%=product.id%>&size=<%=product.size%>">-</a>
							<a class="btn btn-sm btn-outline-danger" href="/cart/remove/?id=<%=product.id%>&size=<%=product.size%>&quantity=<%=product.quantity%>">x</a>
						</td>
					</tr>
				<%	});%>				
			</tbody>
		</table>
		<div class="float-right">				
				<a href="/order/create" class="btn btn-lg btn-dark">Buy!!</a>
		</div>
		<% }else{%>
			<h5>Your cart it's empty!</h5>
		<%}
	}%>
	</div>
</div>