<div class="col-xs-12">
<%if(cart && cart.products){
	%>
	<div class="row justify-content-md-center">
		<div class="col col-10">
			<div class="row">
				<div class="col col-6">
					<small>
						<table class="table table-striped">
							<thead>
								<tr>
									<th scope="col col-2">Products</th>
									<th scope="col"></th>
									<th scope="col"></th>
									<th scope="col">price</th>
								</tr>
							</thead>
							<tbody>
								<%
								cart.products.forEach(function(product){%>
									<tr>
										<td class="align-middle"><a class="product-link" href="/products/<%=product.id%>"><img class="img-fluid" src="/images<%=product.image%>" style="max-width:40px;"></a></td>
										<td class="align-middle"><%=product.name%> - <%=product.size%></td>
										<td class="align-middle">x <%=product.quantity%></td>
										<td class="align-middle"><b>$<%=product.price*product.quantity%></b></td>
									</tr>
								<%	});%>
							</tbody>
						</table>
					</small>
					<br/>
					<strong>
						<table class="col table float-right text-right table-bordered">
							<tbody>
								<td>Total: </td>
								<td>$ <%=cart.totalCost%></td>
							</tbody>
						</table>
					</strong>
				</div>
				<div class="col col-6">
					<form id="order_form" class="ajax-form" action="/order/create" method="POST">
						<h5 class="mb-3">Payment method</h5>
						<div class="row mb-3">
					    <div class="col-6 form-group">
					    	<label for="card_number"><small>Card Number</small></label>
					      <input id="card_number" name="card_number" type="text" class="form-control" required="true" type="number" maxlength="16" value="0000000000005555">
					    </div>
					    <div class="col-3 form-group pr-1">
					    	<label for="exp_month"><small>Expiration</small></label>						   
					      <input id="exp_month" name="exp_month" type="text" class="form-control" required="true"  placeholder="MM" type="number" maxlength="2" value="02">					   
					    </div>
					    <div class="col-3 form-group pl-1">
					    	<label for="exp_year"><small>date</small></label>
					      <input id="exp_year" name="exp_year" type="text" class="form-control" required="true" placeholder="YY" type="number" maxlength="2" value="22">
						  </div>
					  </div>
					  <div class="row mb-3">
					    <div class="col-6 form-group">
					    	<label for="name"><small>Card owner</small></label>
					      <input id="name" name="name" type="text" class="form-control" required="true"> 
					    </div>
					    <div class="col-4 form-group">
					    	<label for="nip"><small>Nip</small></label>
					      <input id="nip" name="nip" type="text" class="form-control col" required="true" type="number" maxlength="4" value="1234">					   
					    </div>
					  </div>
					  <div class="form-group text-right">
					  	<button type="submit" class="btn btn-lg btn-success">Place Order</button>
					  </div>
					</form>
				</div>
			</div>
		</div>
	</div>
<%}%>
